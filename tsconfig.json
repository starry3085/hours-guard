{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["vitest/globals", "node"],
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist"
  },
  "include": ["tests/**/*.ts"],
  "exclude": ["node_modules"]
} 