    {
      "protocol": "web+hoursguard",
      "url": "/?protocol=%s"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://hours-guard.com/manifest.json"
    },
    {
      "platform": "play",
