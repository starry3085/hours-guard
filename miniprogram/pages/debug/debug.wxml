<!-- debug.wxml -->
<view class="container">
  <view class="header">
    <text class="title">调试工具</text>
  </view>
  
  <view class="section">
    <view class="section-title">存储信息</view>
    <view class="info-item">
      <text>记录总数: {{storageInfo.recordCount ? storageInfo.recordCount : 0}}</text>
    </view>
    <view class="info-item">
      <text>存储使用: {{storageInfo.usagePercent ? storageInfo.usagePercent : 0}}%</text>
    </view>
    <view class="info-item">
      <text>调试信息: {{debugInfo}}</text>
    </view>
  </view>
  
  <view class="section">
    <view class="section-title">操作</view>
    <view class="button-group">
      <button bindtap="clearCache" type="primary" size="mini">清除缓存</button>
      <button bindtap="optimizeStorage" type="primary" size="mini">优化存储</button>
      <button bindtap="forceReload" type="warn" size="mini">强制刷新</button>
    </view>
  </view>
  
  <view class="section">
    <view class="section-title">记录数据 ({{records.length}})</view>
    <scroll-view scroll-y class="records-container">
      <block wx:for="{{records}}" wx:key="date">
        <view class="record-item">
          <text class="record-date">{{item.date}}</text>
          <view class="record-times">
            <text wx:if="{{item.on}}">上班: {{item.on}}</text>
            <text wx:if="{{item.off}}">下班: {{item.off}}</text>
          </view>
        </view>
      </block>
      <view wx:if="{{records.length === 0}}" class="empty-tip">
        <text>暂无记录数据</text>
      </view>
    </scroll-view>
  </view>
</view>