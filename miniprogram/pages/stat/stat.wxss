/* 页面容器 */
.page-container {
  padding: 30rpx;
  background: #f7f7f7;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  /* 使用安全区域适配，确保在所有机型上都不被底部导航栏遮挡 */
  padding-bottom: calc(110rpx + env(safe-area-inset-bottom));
}

/* 页面标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 56rpx;
  font-weight: 600;
  color: #191919;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  position: relative;
  display: inline-block;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #07c160;
  border-radius: 3rpx;
}

/* 月份显示 */
.month-display {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  cursor: pointer;
}

.month-text {
  font-size: 36rpx;
  color: #07c160;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.month-arrow {
  font-size: 24rpx;
  color: #07c160;
  margin-left: 10rpx;
  margin-top: 4rpx;
}

/* 日期选择器弹窗样式 */
.date-picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1001;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.date-picker-overlay.show {
  opacity: 1;
  visibility: visible;
}

.date-picker-modal {
  width: 90%;
  max-width: 650rpx;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  animation: datePickerIn 0.3s ease;
}

@keyframes datePickerIn {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.date-picker-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-picker-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.date-picker-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 10rpx;
  margin: -10rpx;
}

.date-picker-body {
  padding: 30rpx;
}

.year-month-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.year-item, .month-item {
  text-align: center;
  padding: 16rpx 0;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #333;
  transition: all 0.2s ease;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.year-item:active, .month-item:active {
  background: #e0e0e0;
}

.year-item.active, .month-item.active {
  background: #07c160;
  color: white;
  font-weight: 500;
}

.date-picker-footer {
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #eee;
}

.picker-btn {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.picker-btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.picker-btn-confirm {
  background: #07c160;
  color: white;
  font-weight: 500;
}

/* 统计区域 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.stats-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: #07c160;
  border-radius: 4rpx 0 0 4rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stats-row:last-child {
  margin-bottom: 0;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin: 0 8rpx;
  position: relative;
}

.stat-item:first-child {
  margin-left: 0;
}

.stat-item:last-child {
  margin-right: 0;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  text-align: center;
  line-height: 1.2;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 统一字体样式 */
.unified-font {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 记录列表区域 */
.records-section {
  flex: 1;
  margin-bottom: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
  font-size: 38rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.empty-hint {
  font-size: 32rpx;
  color: #999;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 记录卡片 */
.record-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 记录列表 */
.record-list {
  max-height: 60vh;
  overflow: hidden;
}

.list-header {
  display: flex;
  background: transparent;
  padding: 20rpx 16rpx;
  font-weight: bold;
  font-size: 32rpx;
  color: #666;
  border-bottom: 2rpx solid #e9ecef;
  margin-bottom: 20rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  align-items: center;
}

.header-date {
  flex: 1.2;
  text-align: center;
  padding: 0 8rpx;
}

.header-time {
  flex: 1;
  text-align: center;
  padding: 0 8rpx;
}

.header-workhours {
  flex: 1.3;
  text-align: center;
  padding: 0 8rpx;
}

.record-row {
  display: flex;
  align-items: center;
  padding: 20rpx 16rpx;
  margin-bottom: 16rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  min-height: 80rpx;
}

.record-row::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: #07c160;
  opacity: 0.5;
  border-radius: 0 4rpx 4rpx 0;
}

.record-row:last-child {
  margin-bottom: 0;
}

.cell-date {
  flex: 1.2;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  padding: 0 8rpx;
}

.date-text {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.weekday {
  font-size: 26rpx;
  color: #999;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.cell-time {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  cursor: pointer;
  position: relative;
  padding: 0 8rpx;
}

.cell-workhours {
  flex: 1.3;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  position: relative;
  padding: 0 8rpx;
}

.time-container {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.time-text {
  font-size: 34rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.time-text.has-time {
  color: #07c160;
  background: transparent;
}

.time-text.no-time {
  color: #999;
  background: transparent;
}

/* 工作时长样式 */
.time-text.work-hours {
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1.2;
  text-align: center;
  white-space: pre-line;
}

.time-text.work-hours.has-time {
  color: #ff6b35;
  background: transparent;
}

/* 工作时长分行显示样式 */
.work-hours-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 2rpx;
}

.work-hours-line {
  font-size: 30rpx;
  font-weight: 600;
  color: #ff6b35;
  line-height: 1.1;
  text-align: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}



/* 提示信息区域 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: auto;
  margin-bottom: 20rpx;
}

/* 数据备份提示特殊样式 */
.data-backup-notice {
  margin: 20rpx 0 0 0;
}

.data-backup-notice .tip-item {
  padding: 24rpx;
  background: #fffbeb;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  border-left: 8rpx solid #ff9800;
  display: flex;
  align-items: center;
}

.data-backup-notice .tip-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  padding-left: 36rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.tip-item {
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  border-left: 4rpx solid rgba(7, 193, 96, 0.6);
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding-left: 10rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.bold-tip {
  font-weight: 600;
  color: #555;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 提示图标 */
.tip-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ff9800;
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}

.tip-icon::before {
  content: "!";
  position: absolute;
  color: white;
  font-size: 18rpx;
  font-weight: bold;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 时间选择器弹窗 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.picker-modal {
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.picker-cancel {
  font-size: 32rpx;
  color: #999;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.picker-confirm {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.picker-body {
  padding: 40rpx;
  position: relative;
}

.picker-view {
  height: 400rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.picker-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.time-display {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

