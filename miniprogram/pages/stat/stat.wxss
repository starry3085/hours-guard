/* 页面容器 */
.page-container {
  padding: 30rpx;
  background: #f7f7f7;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  /* 使用安全区域适配，确保在所有机型上都不被底部导航栏遮挡 */
  padding-bottom: calc(110rpx + env(safe-area-inset-bottom));
}

/* 页面标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 56rpx;
  font-weight: 600;
  color: #191919;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  position: relative;
  display: inline-block;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #07c160;
  border-radius: 3rpx;
}

/* 月份显示 */
.month-display {
  text-align: center;
  margin-bottom: 30rpx;
}

.month-text {
  font-size: 36rpx;
  color: #888;
  font-weight: 500;
}

/* 统计区域 */
.stats-section {
  margin-bottom: 30rpx;
}

.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.stats-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: linear-gradient(to bottom, #07c160, #ff9800);
  border-radius: 4rpx 0 0 4rpx;
}

.stats-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.stats-row:last-child {
  margin-bottom: 0;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin: 0 8rpx;
  position: relative;
}

.stat-item:first-child {
  margin-left: 0;
}

.stat-item:last-child {
  margin-right: 0;
}

.stat-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  text-align: center;
  line-height: 1.2;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 记录列表区域 */
.records-section {
  flex: 1;
  margin-bottom: 40rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.empty-text {
  font-size: 38rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 32rpx;
  color: #999;
}

/* 记录卡片 */
.record-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 记录列表 */
.record-list {
  max-height: 60vh;
  overflow: hidden;
}

.list-header {
  display: flex;
  background: transparent;
  padding: 20rpx 24rpx;
  font-weight: bold;
  font-size: 32rpx;
  color: #666;
  border-bottom: 2rpx solid #e9ecef;
  margin-bottom: 20rpx;
}

.header-date {
  flex: 2;
  text-align: center;
}

.header-time {
  flex: 1.5;
  text-align: center;
}

.record-row {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.record-row::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: #07c160;
  opacity: 0.5;
  border-radius: 0 4rpx 4rpx 0;
}

.record-row:last-child {
  margin-bottom: 0;
}

.cell-date {
  flex: 2;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.date-text {
  font-size: 34rpx;
  color: #333;
  font-weight: 500;
}

.weekday {
  font-size: 26rpx;
  color: #999;
}

.cell-time {
  flex: 1.5;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
  cursor: pointer;
  position: relative;
}

.time-container {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.time-text {
  font-size: 34rpx;
  font-family: 'Courier New', monospace;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.time-text.has-time {
  color: #07c160;
  background: #e8f5e8;
}

.time-text.no-time {
  color: #999;
  background: #f5f5f5;
}

.record-icon {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  position: relative;
}

.record-icon-in {
  background-color: #07c160;
}

.record-icon-in::after {
  content: '';
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #07c160;
  border-radius: 50%;
  opacity: 0.4;
  animation: pulse-small 2s infinite;
}

.record-icon-out {
  background-color: #ff9800;
}

.record-icon-out::after {
  content: '';
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #ff9800;
  border-radius: 50%;
  opacity: 0.4;
  animation: pulse-small 2s infinite;
}

@keyframes pulse-small {
  0% {
    transform: scale(1);
    opacity: 0.4;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.2;
  }
  100% {
    transform: scale(1);
    opacity: 0.4;
  }
}

/* 提示信息区域 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: auto;
  margin-bottom: 20rpx;
}

/* 数据备份提示特殊样式 */
.data-backup-notice {
  margin: 20rpx 0 0 0;
}

.data-backup-notice .tip-item {
  padding: 24rpx;
  background: #fffbeb;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  border-left: 8rpx solid #ff9800;
  display: flex;
  align-items: center;
}

.data-backup-notice .tip-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  padding-left: 36rpx;
}

.tip-item {
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  border-left: 4rpx solid rgba(7, 193, 96, 0.6);
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding-left: 10rpx;
}

.bold-tip {
  font-weight: 600;
  color: #555;
}

/* 提示图标 */
.tip-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ff9800;
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}

.tip-icon::before {
  content: "!";
  position: absolute;
  color: white;
  font-size: 18rpx;
  font-weight: bold;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 时间选择器弹窗 */
.picker-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.picker-modal {
  width: 100%;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.picker-cancel {
  font-size: 32rpx;
  color: #999;
}

.picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.picker-confirm {
  font-size: 32rpx;
  color: #07c160;
  font-weight: bold;
}

.picker-body {
  padding: 40rpx;
  position: relative;
}

.picker-view {
  height: 400rpx;
}

.picker-item {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.picker-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.time-display {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-family: 'Courier New', monospace;
}

