<view class="container">
  <view class="title">打卡</view>
  <view class="date-time">
    <picker 
      mode="date" 
      value="{{selectedDate}}"
      start="2000-01-01"
      end="2030-12-31"
      bindchange="onDateChange">
      <text>{{selectedDate}}</text>
    </picker>
    <text class="time">{{currentTime}}</text>
  </view>
  <view class="card">
    <view class="record-item">
      <text>上班时间：</text>
      <text class="time" style="color:{{todayRecord.on ? '#07C160' : ''}}">{{todayRecord.on || '未打卡'}}</text>
    </view>
    <view class="record-item">
      <text>下班时间：</text>
      <text class="time" style="color:{{todayRecord.off ? '#07C160' : ''}}">{{todayRecord.off || '未打卡'}}</text>
    </view>
  </view>
  <view class="btn-group">
    <button type="primary" bindtap="checkIn" disabled="{{!!todayRecord.on}}">上班打卡</button>
    <button type="warn" bindtap="checkOut" disabled="{{!!todayRecord.off || !todayRecord.on}}">下班打卡</button>
  </view>
  <view class="tips">
    <text>提示：所有数据仅保存在本机，请定期导出备份</text>
  </view>
</view>
