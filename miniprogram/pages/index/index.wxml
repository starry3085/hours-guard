<view class="container">
  <view class="title">今日打卡</view>
  <view class="date">{{today}}</view>
  <view class="card">
    <view class="record-item">
      <text>上班时间：</text>
      <text class="time">{{todayRecord.on || '未打卡'}}</text>
    </view>
    <view class="record-item">
      <text>下班时间：</text>
      <text class="time">{{todayRecord.off || '未打卡'}}</text>
    </view>
  </view>
  <view class="btn-group">
    <button type="primary" bindtap="checkIn" disabled="{{!!todayRecord.on}}">上班打卡</button>
    <button type="warn" bindtap="checkOut" disabled="{{!!todayRecord.off || !todayRecord.on}}">下班打卡</button>
  </view>
  <view class="tips">
    <text>提示：所有数据仅保存在本机，请定期导出备份</text>
  </view>
</view> 