/* 页面容器 */
.page-container {
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  /* 使用安全区域适配，确保在所有机型上都不被底部导航栏遮挡 */
  padding-bottom: calc(110rpx + env(safe-area-inset-bottom));
}

/* 页面标题区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.title {
  font-size: 64rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
  position: relative;
  display: inline-block;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.title::after {
  content: '';
  position: absolute;
  bottom: -15rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 8rpx;
  background: linear-gradient(90deg, #ff9a56 0%, #ff6b6b 100%);
  border-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.4);
}

/* 简洁日期选择器 */
.date-picker-simple {
  margin-top: 20rpx;
}

.date-display-simple {
  display: inline-block;
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

.date-text-simple {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.subtitle {
  font-size: 36rpx;
  color: #888;
}



/* 打卡记录卡片 */
.record-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 50rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  padding-bottom: 0;
}

.card-title {
  font-size: 38rpx;
  font-weight: 500;
  color: #191919;
}

.card-date {
  font-size: 28rpx;
  color: #888;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  padding: 32rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  min-height: 80rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.record-item::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
  border-radius: 0 4rpx 4rpx 0;
}

.record-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.record-label-container {
  display: flex;
  align-items: center;
  flex: 1;
}

.record-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  position: relative;
  flex-shrink: 0;
}

.record-icon-in {
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
}

.record-icon-in::after {
  content: '';
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 10rpx;
  height: 10rpx;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
  border-radius: 50%;
  opacity: 0.6;
  animation: pulse-small 2s infinite;
}

.record-icon-out {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.record-icon-out::after {
  content: '';
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 10rpx;
  height: 10rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-radius: 50%;
  opacity: 0.6;
  animation: pulse-small 2s infinite;
}

@keyframes pulse-small {
  0% {
    transform: scale(1);
    opacity: 0.4;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.2;
  }
  100% {
    transform: scale(1);
    opacity: 0.4;
  }
}

.record-label {
  font-size: 42rpx;
  color: #191919;
  font-weight: 500;
  margin-left: 12rpx;
  display: flex;
  align-items: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.record-time-container {
  display: flex;
  align-items: center;
}

.record-time {
  font-size: 42rpx;
  font-weight: bold;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.edit-hint {
  font-size: 20rpx;
  color: #888;
}

/* 打卡按钮区域 */
.action-section {
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.punch-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: 600;
  border: none;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  letter-spacing: 2rpx;
}

.punch-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, rgba(255,255,255,0.1), rgba(255,255,255,0));
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.punch-btn:active::before {
  transform: translateX(100%);
}

.punch-in-active {
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(255, 154, 86, 0.4);
}

.punch-in-active:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(255, 154, 86, 0.6);
}

.punch-out-active {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(79, 172, 254, 0.4);
}

.punch-out-active:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 20rpx rgba(79, 172, 254, 0.6);
}

.punch-disabled {
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.6);
  box-shadow: none;
  cursor: not-allowed;
}

.btn-hover {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: relative;
}

.btn-text {
  font-size: 38rpx;
  display: block;
  letter-spacing: 2rpx;
}

.btn-status {
  position: absolute;
  right: 20rpx;
  font-size: 28rpx;
  opacity: 0.8;
}

.btn-status-text {
  font-size: 24rpx;
  margin-top: 8rpx;
  opacity: 0.8;
  color: inherit;
}



/* 提示信息区域 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: auto;
  margin-bottom: 20rpx;
}

/* 数据备份提示特殊样式 */
.data-backup-notice {
  margin: 20rpx 0 0 0;
}

.data-backup-notice .tip-item {
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
  border-left: 8rpx solid #ff9a56;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
}

.data-backup-notice .tip-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  padding-left: 36rpx;
  font-weight: 500;
}

.tip-item {
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  border-left: 4rpx solid rgba(7, 193, 96, 0.6);
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding-left: 10rpx;
}

.bold-tip {
  font-weight: 600;
  color: #555;
}

/* 提示图标 */
.tip-icon {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  box-shadow: 0 2rpx 8rpx rgba(255, 154, 86, 0.3);
}

.tip-icon::before {
  content: "!";
  position: absolute;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-bottom: env(safe-area-inset-bottom);
  backdrop-filter: blur(10rpx);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  position: relative;
  transition: all 0.3s ease;
}

.tab-active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #ff9a56 0%, #ff6b6b 100%);
  border-radius: 2rpx;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
  position: relative;
}

.tab-icon-clock::before {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid currentColor;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.tab-icon-clock::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 2rpx;
  background-color: currentColor;
  top: 50%;
  left: 50%;
  transform: translate(0, -50%) rotate(45deg);
  transform-origin: left center;
}

.tab-icon-stat::before {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 16rpx;
  background-color: currentColor;
  bottom: 6rpx;
  left: 10rpx;
  border-radius: 3rpx;
}

.tab-icon-stat::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 24rpx;
  background-color: currentColor;
  bottom: 6rpx;
  left: 22rpx;
  border-radius: 3rpx;
}

.tab-icon-export::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 16rpx;
  border: 2rpx solid currentColor;
  border-radius: 2rpx;
  top: 8rpx;
  left: 50%;
  transform: translateX(-50%);
}

.tab-icon-export::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border-left: 2rpx solid currentColor;
  border-bottom: 2rpx solid currentColor;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%) rotate(-45deg);
}

.tab-text {
  font-size: 24rpx;
  color: currentColor;
}

