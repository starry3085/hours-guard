/* 页面容器 */
.page-container {
  padding: 30rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

/* 页面标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 500;
  color: #191919;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 36rpx;
  color: #888;
}

/* 日期时间区域 */
.datetime-section {
  margin-bottom: 40rpx;
}

.date-time-wrapper {
  background: white;
  border-radius: 8rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-picker {
  flex: 1;
}

.date-display {
  display: flex;
  align-items: center;
  font-size: 38rpx;
  color: #333;
}

.date-text {
  font-weight: 500;
}

.time-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #07c160;
  font-family: 'Courier New', monospace;
}

/* 打卡记录卡片 */
.record-card {
  background: white;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  padding-bottom: 0;
  /* Removed border since header is now empty */
}

.card-title {
  font-size: 38rpx;
  font-weight: 500;
  color: #191919;
}

.card-date {
  font-size: 28rpx;
  color: #888;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  padding: 20rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  height: 80rpx; /* Set fixed height for better vertical alignment */
}

.record-row {
  display: flex;
  justify-content: space-between;
  align-items: center; /* 恢复为居中对齐 */
  height: 100%;
}

.record-label {
  font-size: 34rpx;
  color: #191919;
  font-weight: 500;
}

.record-time {
  font-size: 38rpx;
  font-weight: bold;
  font-family: 'Courier New', monospace;
  color: #07c160; /* Keep the green text color */
  transform: translateY(-16rpx); /* 进一步微调向上移动的距离 */
}

.edit-hint {
  font-size: 20rpx;
  color: #888;
}

/* 打卡按钮区域 */
.action-section {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.punch-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 32rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  position: relative;
  transition: all 0.2s ease;
}

.punch-in {
  background: #07c160;
  color: white;
}

.punch-out {
  background: white;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.punch-btn.disabled {
  background: #f7f7f7 !important;
  color: #ccc !important;
  border-color: #f7f7f7 !important;
}

.btn-hover {
  opacity: 0.8;
}

.btn-text {
  font-size: 38rpx;
}

.btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: relative;
}

.btn-text {
  font-size: 38rpx;
  display: block;
}

.btn-status {
  position: absolute;
  right: 20rpx;
  font-size: 28rpx;
  opacity: 0.8;
}

.btn-status-text {
  font-size: 24rpx;
  margin-top: 8rpx;
  opacity: 0.8;
  color: inherit;
}

/* 自定义按钮样式 */
.custom-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-radius: 8rpx;
  font-size: 38rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  position: relative;
}

.custom-btn-out {
  background: white;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.custom-btn-disabled {
  background: #f7f7f7;
  color: #ccc;
  border: 2rpx solid #f7f7f7;
}

.custom-btn-hint {
  font-size: 24rpx;
  margin-top: 8rpx;
  opacity: 0.8;
}

/* 提示信息区域 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-item {
  padding: 24rpx;
  background: white;
  border-radius: 8rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #666;
  line-height: 1.4;
}

.bold-tip {
  font-weight: bold;
} 