/* 页面容器 */
.page-container {
  padding: 30rpx;
  background: #f7f7f7;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  /* 使用安全区域适配，确保在所有机型上都不被底部导航栏遮挡 */
  padding-bottom: calc(110rpx + env(safe-area-inset-bottom));
}

/* 页面标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 56rpx;
  font-weight: 600;
  color: #191919;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  position: relative;
  display: inline-block;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #07c160;
  border-radius: 3rpx;
}

.subtitle {
  font-size: 36rpx;
  color: #888;
}

/* 日期时间区域 */
.datetime-section {
  margin-bottom: 40rpx;
}

.date-time-wrapper {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
}

.date-time-wrapper::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: #07c160;
  border-radius: 4rpx 0 0 4rpx;
}

.date-picker {
  flex: 1;
}

.date-display {
  display: flex;
  align-items: center;
  font-size: 38rpx;
  color: #333;
}

.date-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

.calendar-icon {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #07c160;
  border-radius: 6rpx;
  position: relative;
}

.calendar-icon::before {
  content: '';
  position: absolute;
  top: -8rpx;
  left: 6rpx;
  width: 4rpx;
  height: 8rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.calendar-icon::after {
  content: '';
  position: absolute;
  top: -8rpx;
  right: 6rpx;
  width: 4rpx;
  height: 8rpx;
  background: #07c160;
  border-radius: 2rpx;
}

.date-text {
  font-weight: 500;
  position: relative;
  padding-left: 10rpx;
}

.time-container {
  position: relative;
  display: flex;
  align-items: center;
}

.time-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #07c160;
  font-family: 'Courier New', monospace;
  position: relative;
}

.time-pulse {
  position: absolute;
  right: -16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 8rpx;
  background-color: #07c160;
  border-radius: 50%;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% {
    transform: translateY(-50%) scale(1);
    opacity: 1;
  }
  50% {
    transform: translateY(-50%) scale(1.5);
    opacity: 0.5;
  }
  100% {
    transform: translateY(-50%) scale(1);
    opacity: 1;
  }
}

/* 打卡记录卡片 */
.record-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
  padding-bottom: 0;
}

.card-title {
  font-size: 38rpx;
  font-weight: 500;
  color: #191919;
}

.card-date {
  font-size: 28rpx;
  color: #888;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  padding: 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  height: 80rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.record-item::after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: #07c160;
  opacity: 0.5;
  border-radius: 0 4rpx 4rpx 0;
}

.record-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.record-label-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.record-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  position: relative;
}

.record-icon-in {
  background-color: #07c160;
}

.record-icon-in::after {
  content: '';
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 10rpx;
  height: 10rpx;
  background-color: #07c160;
  border-radius: 50%;
  opacity: 0.4;
  animation: pulse-small 2s infinite;
}

.record-icon-out {
  background-color: #ff9800;
}

.record-icon-out::after {
  content: '';
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  width: 10rpx;
  height: 10rpx;
  background-color: #ff9800;
  border-radius: 50%;
  opacity: 0.4;
  animation: pulse-small 2s infinite;
}

@keyframes pulse-small {
  0% {
    transform: scale(1);
    opacity: 0.4;
  }
  50% {
    transform: scale(1.5);
    opacity: 0.2;
  }
  100% {
    transform: scale(1);
    opacity: 0.4;
  }
}

.record-label {
  font-size: 34rpx;
  color: #191919;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.record-time {
  font-size: 40rpx;
  font-weight: bold;
  font-family: 'Courier New', monospace;
  color: #07c160;
  letter-spacing: 1rpx;
}

.edit-hint {
  font-size: 20rpx;
  color: #888;
}

/* 打卡按钮区域 */
.action-section {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.punch-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  position: relative;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.punch-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to right, rgba(255,255,255,0.1), rgba(255,255,255,0));
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.punch-btn:active::after {
  transform: translateX(100%);
}

.punch-in {
  background: #07c160;
  color: white;
}

.punch-out {
  background: white;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.punch-btn.disabled {
  background: #f7f7f7 !important;
  color: #ccc !important;
  border-color: #f7f7f7 !important;
  box-shadow: none;
}

.btn-hover {
  opacity: 0.9;
  transform: translateY(2rpx);
}

.btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: relative;
}

.btn-text {
  font-size: 38rpx;
  display: block;
  letter-spacing: 2rpx;
}

.btn-status {
  position: absolute;
  right: 20rpx;
  font-size: 28rpx;
  opacity: 0.8;
}

.btn-status-text {
  font-size: 24rpx;
  margin-top: 8rpx;
  opacity: 0.8;
  color: inherit;
}

/* 自定义按钮样式 */
.custom-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-radius: 16rpx;
  font-size: 38rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  letter-spacing: 2rpx;
}

.custom-btn-out {
  background: white;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.custom-btn-out:active {
  background: rgba(7, 193, 96, 0.05);
  transform: translateY(2rpx);
}

.custom-btn-disabled {
  background: #f7f7f7;
  color: #ccc;
  border: 2rpx solid #f7f7f7;
  box-shadow: none;
}

.custom-btn-hint {
  font-size: 24rpx;
  margin-top: 8rpx;
  opacity: 0.8;
}

/* 提示信息区域 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: auto;
  margin-bottom: 20rpx;
}

/* 数据备份提示特殊样式 */
.data-backup-notice {
  margin: 20rpx 0 0 0;
}

.data-backup-notice .tip-item {
  padding: 24rpx;
  background: #fffbeb;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  border-left: 8rpx solid #ff9800;
  display: flex;
  align-items: center;
}

.data-backup-notice .tip-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  padding-left: 36rpx;
}

.tip-item {
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  position: relative;
  overflow: hidden;
  border-left: 4rpx solid rgba(7, 193, 96, 0.6);
}

.tip-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  padding-left: 10rpx;
}

.bold-tip {
  font-weight: 600;
  color: #555;
}

/* 提示图标 */
.tip-icon {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #ff9800;
  position: absolute;
  left: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}

.tip-icon::before {
  content: "!";
  position: absolute;
  color: white;
  font-size: 18rpx;
  font-weight: bold;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 110rpx;
  background: white;
  display: flex;
  justify-content: space-around;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  border-top: 1rpx solid #f0f0f0;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
  position: relative;
  transition: all 0.3s ease;
}

.tab-active {
  color: #07c160;
}

.tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 6rpx;
  position: relative;
}

.tab-icon-clock::before {
  content: '';
  position: absolute;
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid currentColor;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.tab-icon-clock::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 2rpx;
  background-color: currentColor;
  top: 50%;
  left: 50%;
  transform: translate(0, -50%) rotate(45deg);
  transform-origin: left center;
}

.tab-icon-stat::before {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 16rpx;
  background-color: currentColor;
  bottom: 6rpx;
  left: 10rpx;
  border-radius: 3rpx;
}

.tab-icon-stat::after {
  content: '';
  position: absolute;
  width: 6rpx;
  height: 24rpx;
  background-color: currentColor;
  bottom: 6rpx;
  left: 22rpx;
  border-radius: 3rpx;
}

.tab-icon-export::before {
  content: '';
  position: absolute;
  width: 20rpx;
  height: 16rpx;
  border: 2rpx solid currentColor;
  border-radius: 2rpx;
  top: 8rpx;
  left: 50%;
  transform: translateX(-50%);
}

.tab-icon-export::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border-left: 2rpx solid currentColor;
  border-bottom: 2rpx solid currentColor;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%) rotate(-45deg);
}

.tab-text {
  font-size: 24rpx;
  color: currentColor;
}

