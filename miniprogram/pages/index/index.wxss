/* 页面容器 */
.page-container {
  padding: 30rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

/* 页面标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 56rpx;
  font-weight: 500;
  color: #191919;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 36rpx;
  color: #888;
}

/* 日期时间区域 */
.datetime-section {
  margin-bottom: 40rpx;
}

.date-picker-wrapper {
  background: white;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.date-picker {
  width: 100%;
}

.date-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 38rpx;
  color: #333;
}

.date-text {
  font-weight: 500;
}

.current-time {
  background: white;
  border-radius: 8rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time-label {
  font-size: 32rpx;
  color: #666;
}

.time-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #07c160;
  font-family: 'Courier New', monospace;
}

/* 打卡记录卡片 */
.record-card {
  background: white;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-title {
  font-size: 38rpx;
  font-weight: 500;
  color: #191919;
}

.card-date {
  font-size: 28rpx;
  color: #888;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-label {
  font-size: 34rpx;
  color: #191919;
  font-weight: 500;
}

.record-status {
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  text-align: center;
}

.record-status.completed {
  background: #e8f5e8;
  color: #07c160;
}

.record-status.pending {
  background: #f7f7f7;
  color: #888;
}

.record-time-wrapper {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.record-time {
  font-size: 38rpx;
  font-weight: bold;
  font-family: 'Courier New', monospace;
  padding: 8rpx 16rpx;
  border-radius: 4rpx;
  min-width: 120rpx;
  text-align: center;
}

.record-time.has-time {
  color: #07c160;
  background: #e8f5e8;
}

.record-time.no-time {
  color: #888;
  background: #f7f7f7;
}

.edit-hint {
  font-size: 20rpx;
  color: #888;
}

/* 打卡按钮区域 */
.action-section {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.punch-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 32rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  position: relative;
  transition: all 0.2s ease;
}

.punch-in {
  background: #07c160;
  color: white;
}

.punch-out {
  background: white;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.punch-btn.disabled {
  background: #f7f7f7 !important;
  color: #ccc !important;
  border-color: #f7f7f7 !important;
}

.btn-hover {
  opacity: 0.8;
}

.btn-text {
  font-size: 38rpx;
}

.btn-status {
  position: absolute;
  right: 20rpx;
  font-size: 28rpx;
  opacity: 0.8;
}

/* 提示信息区域 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-item {
  padding: 24rpx;
  background: white;
  border-radius: 8rpx;
}

.tip-text {
  font-size: 32rpx;
  color: #666;
  line-height: 1.4;
} 