/* 存储管理页面样式 */

.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 页面标题 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #666;
  font-size: 32rpx;
}

/* 区块样式 */
.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 8rpx solid #07c160;
}

/* 信息卡片 */
.info-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 30rpx;
}

.info-label {
  font-size: 32rpx;
  color: #666;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.info-value.warning {
  color: #ff6b6b;
}

/* 进度条 */
.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #07c160, #38d9a9);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* 健康状态卡片 */
.health-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.health-card.healthy {
  border-left: 8rpx solid #07c160;
}

.health-card.unhealthy {
  border-left: 8rpx solid #ff6b6b;
}

.health-status {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.issues, .suggestions {
  margin-top: 20rpx;
}

.issues-title, .suggestions-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
}

.issue-item, .suggestion-item {
  margin-bottom: 8rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 操作网格 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.action-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s ease;
}

.action-item:active {
  transform: scale(0.95);
}

.action-item.danger {
  background: #fff5f5;
  border: 2rpx solid #ff6b6b;
}

.action-icon {
  display: block;
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.action-text {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.action-item.danger .action-text {
  color: #ff6b6b;
}

.action-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 提示卡片 */
.tips-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.tip-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
  margin-top: 2rpx;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}