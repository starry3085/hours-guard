.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.card {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.picker {
  color: #1aad19;
  font-weight: bold;
}

.btn-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

button {
  width: 100% !important;
}

.tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.tip {
  font-size: 24rpx;
  color: #999;
}

.warning {
  font-size: 24rpx;
  color: #e64340;
  font-weight: bold;
  margin-top: 10rpx;
} 