/* 页面容器 */
.page-container {
  padding: 30rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

/* 页面标题区域 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 500;
  color: #191919;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #888;
}

/* 月份选择卡片 */
.month-card {
  background: white;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-header {
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #191919;
}

.month-picker {
  width: 100%;
}

.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.picker-display:active {
  background: #ededed;
}

.selected-month {
  font-size: 36rpx;
  font-weight: 500;
  color: #07c160;
}

.picker-arrow {
  font-size: 28rpx;
  color: #888;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 8rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: flex;
  gap: 30rpx;
  margin-top: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #07c160;
  font-family: 'Courier New', monospace;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 28rpx;
  color: #888;
}

/* 空数据卡片 */
.empty-card {
  background: white;
  border-radius: 8rpx;
  padding: 60rpx 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.empty-text {
  font-size: 36rpx;
  color: #191919;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.empty-hint {
  font-size: 30rpx;
  color: #888;
}

/* 操作按钮区域 */
.action-section {
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.export-btn, .share-btn, .storage-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
  border-radius: 8rpx;
  font-size: 36rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s ease;
}

.export-btn {
  background: #07c160;
  color: white;
}

.export-btn.generating {
  background: #888;
}

.share-btn {
  background: white;
  color: #07c160;
  border: 2rpx solid #07c160;
}

.storage-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #dee2e6;
}

.export-btn.disabled, .share-btn.disabled {
  background: #f7f7f7 !important;
  color: #ccc !important;
  border-color: #f7f7f7 !important;
}

.btn-hover {
  opacity: 0.8;
}

.btn-text {
  font-size: 36rpx;
}

/* 信息说明区域 */
.info-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-card {
  background: white;
  border-radius: 8rpx;
  padding: 30rpx;
}

.info-header {
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #191919;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  padding: 12rpx 0;
}

.info-text {
  font-size: 30rpx;
  color: #666;
}

.warning-card {
  padding: 30rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
}

.warning-text {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

/* 隐藏Canvas */
.hidden-canvas {
  position: fixed;
  left: -9999rpx;
  top: -9999rpx;
  width: 595rpx;
  height: 842rpx;
} 